.ico-status
  border-radius: 50%
  size: .7em
  margin-right: .3em
  &--green
    background: $colorGreen
  &--red
    background: $colorRed
  &--yellow
    background: $colorYellow


// Site config
.site-config__title
  font-size: 1.3rem
  font-family: 'Open Sans', sans-serif
  color: $fontColorLight
  padding: 0.4em 0

.site-config
  // controls
  &__controls
    background: #f2f6fc
    padding: 3em 2em 2em 2em
    @media($mobile)
      padding: 2em 1em 2em 1em
    &__close
      display: inline-block
      float: right
      opacity: .7
      transition: all .3s ease-in
      &:hover
        opacity: 1

    &__sitename
      font-size: 1.5rem
      font-weight: 700
      padding: 0.4em 0
    &__buttons
      padding: 0.4em 0
      div
        display: inline-block
        margin-right: .7em
    &__status
      font-size: 1rem
      font-weight: 700
      padding: 0.4em 0

      &.active
        color: $colorGreen
      &.disabled
        color: $colorRed
  //chart
  &__chart
    padding: 2em
    @media($mobile)
      padding: 1.5em 1em
    &__controls
      padding-top: 3em
    &__total-views
      font-size: 1.2rem
      display: inline-block
      float: right
      padding-top: .2em
      @media($mobile)
        float: none
      span
        color: $colorRed
  //tags
  &__tags
    margin: 0 2em
    padding-top: 1.6em
    border-top: 1px solid $borderColorLight
    @media($mobile)
      margin: 0 1em
    &__list
      a
        display: inline-block
        font-size: 1.1rem
        padding: .5em .2em .5em 0
        transition: all .4s ease
        position: relative
        &:hover
          opacity: .8
          &::after
            width: 100%
        &::after
          display: block
          content: ' '
          position: absolute
          left: 0
          bottom: .3em
          height: 1px
          background: $colorGreen
          width: 0
          transition: all .4s ease

//horizontal-chart
.horizontal-chart
  display: flex
  flex-direction: row
  justify-content: flex-start
  position: relative
  &__bar
    position: relative
    height: 200px
    width: 2.5%
    margin-right: 1%
    display: inline-block
    background: #e1e7f0
    border-radius: 4px
    text-align: center
    align-self: flex-end
    @media($mobile)
      width: 3%
      margin-right: 0.5%
    &__value
      background: $colorGreen
      border-radius: 4px
      content: ' '
      width: 100%
      position: absolute
      bottom: 0
      transition: all .3s ease
      cursor: pointer
      &:hover
        background: $colorRed
        .toolip-wrapper
          opacity: 1
          .tooltip-toggle
            top: -2.7em
    &__marker
      font-size: 0.7rem
      position: absolute
      bottom: -20px
      width: 100%
      @media($mobile)
        bottom: -15px
        font-size: 0.5rem
  &__overlays
    &__line
      position: absolute
      width: 100%
      height: 1px
      border-bottom: 1px dashed #eff2f7
      content: ' '
      left: 0
      z-index: 3
      &:nth-child(1)
        bottom: 100%
        display: none
      &:nth-child(2)
        bottom: 90%
      &:nth-child(3)
        bottom: 80%
      &:nth-child(4)
        bottom: 70%
      &:nth-child(5)
        bottom: 60%
      &:nth-child(6)
        bottom: 50%
      &:nth-child(7)
        bottom: 40%
      &:nth-child(8)
        bottom: 30%
      &:nth-child(9)
        bottom: 20%
      &:nth-child(10)
        bottom: 10%
