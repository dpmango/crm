//sites

.sites__header
  display: flex
  font-family: 'Open Sans', sans-serif
  justify-content: space-between
  background: white
  z-index: 10
  width: 100%
  padding: 3em 2em 1em 2em
  h1
    display: inline-block
    margin: 0
    font-size: 2.4rem
  &__pagination
    display: inline-block
    &__counter
      margin-right: 1em
      padding-top: 0.7em
      display: inline-block
      vertical-align: top
  &__filters
    display: inline-block


.sites__table
  padding-left: 2em
  padding-right: 2em
  padding-bottom: 1.5em
  @media($mobile)
    padding-left: 1em
    padding-right: 1em

  &__heading
    display: flex
    justify-content: space-between
    padding: 1em 0
    color: $fontColorTiny
    border-bottom: 1px solid $borderColorLight
    span
      display: inline-block
      &:first-child
        padding-left: 1em
      &:last-child
        padding-right: 1em
  &__item
    display: flex
    justify-content: space-between
    position: relative
    overflow: hidden
    padding: 1.4em 1em
    margin-top: -1px
    border-radius: 5px
    cursor: pointer
    transition: all .6s ease
    border: 1px solid transparent
    border-bottom: 1px solid $borderColorLight
    &:hover
      background: #f6f8fb
      border: 1px solid $borderColorLight
      margin-left: -1em
      padding-left: 2em
      margin-right: -1em
      padding-right: 2em
      .sites__table__item__attendance
        padding-right: 4em
      .sites__table__item__controls
        right: 0.5em
    &__name
      font-weight: 700
    &__attendance
      text-align: right
      color: $fontColorTiny
      font-weight: 400
      transition: padding .5s ease
    &__controls
      position: absolute
      right: -10em
      top: 50%
      transform: translateY(-50%)
      transition: all .5s ease
